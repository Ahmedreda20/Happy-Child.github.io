mixin work-card(link, gradient, image, labelTop, title, hoverText, labelBottom)
	.wrap-work-card
		figure.work-card(style=gradient)
			
			.work-card__wrap-img
				img.work-card__img(src=image, alt="")

			span.work-card__label.work-card__label_top= labelTop

			figcaption.work-card__title= title

			p.work-card__text= text

			a(href=link, target="_blank") view site

			span.work-card__label.work-card__label_bottom= labelBottom
