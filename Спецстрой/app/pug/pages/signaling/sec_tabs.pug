section.sec-tabs.sec-tabs-apartments
	.container
		.sec-tabs-content
			aside.wrap-tabs
				.wrap-tabs-group
					h6.tabs-group-title Проводные
					ul.wrap-tabs-items
						li.tab-item.item-1.active-tab(data-item-pos="item-1")
							span Проводной комплект “Стриж”
				.wrap-tabs-group
					h6.tabs-group-title Беспроводные
					ul.wrap-tabs-items
						li.tab-item(data-item-pos="item-2")
							span Беспроводной комплект “Стриж”
			.wrap-tabs-content
				.tab-content-item.active-content(data-item-pos="item-1")
					h2.tab-content-item-title Проводной комплект «Стриж»
					.tab-content-item-info
						.wrap-img
							img(src="img/tab_item.png" alt="Проводной комплект «Стриж»")
						.wrap-text
							.text-group.text-group-1
								p.small-text Цена базового проводного комплекта с установкой и подключением на ПЦН «Радуга»
								span.item-price 15 000 руб.
							.text-group.text-group-2
								p.small-text Абонентская плата руб./мес.
								span.item-price 1 040 руб.
							.wrap-btn.wrap-btn-acc
								button.btn Заказать комплект

				.tab-content-item(data-item-pos="item-2")
					h2.tab-content-item-title Проводной комплект «Стриж»
					.tab-content-item-info
						.wrap-img
							img(src="img/main_services_equipment_3.png" alt="Проводной комплект «Стриж»")
						.wrap-text
							.text-group.text-group-1
								p.small-text Цена базового проводного комплекта с установкой и подключением на ПЦН «Радуга» Цена базового проводного комплекта
								span.item-price 11 000 руб.
							.text-group.text-group-2
								p.small-text Абонентская плата руб./мес.
								span.item-price 900 руб.
							.wrap-btn.wrap-btn-acc
								button.btn Заказать комплект