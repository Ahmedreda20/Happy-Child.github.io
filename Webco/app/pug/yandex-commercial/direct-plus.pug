		.direct-plus-content

			.wrap-title
				span.title Преимущества контекстной рекламы в Яндекс Директ

			.wrap-blue-items-circle
				.item
					.wrap-icon
						img.lazyload(data-src="img/direct-plus-3.svg", alt="")
					p.text Значительный охват пользователей, привлечение целевой аудитории.

				.item
					.wrap-icon
						img.lazyload(data-src="img/direct-plus-4.svg", alt="")
